{
  "min_packer_version": "1.8.0",
  "variables": {
    "project_id": "devbookhq",
    "zone": "us-central1-a",
    "nomad_version": "1.2.6",
    "consul_version": "1.12.0",
    "firecracker_version": "1.0.0"
  },
  "builders": [
    {
      "name": "ubuntu20-image",
      "type": "googlecompute",
      "image_name": "orch-ubuntu20-{{isotime \"2006-01-02-030405\"}}",
      "image_family": "orch",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-2004-lts",
      "zone": "{{user `zone`}}",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /tmp/orch/modules"
      ]
    },
    {
      "type": "file",
      "source": "{{template_dir}}/modules/",
      "destination": "/tmp/orch/modules",
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "inline": [
        "/tmp/orch/modules/install-nomad/install-nomad.sh --version {{user `nomad_version`}}"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "/tmp/orch/modules/install-consul/install-consul.sh --version {{user `consul_version`}}"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "/tmp/orch/modules/install-firecracker/install-firecracker.sh --version {{user `firecracker_version`}}"
      ]
    }
  ]
}